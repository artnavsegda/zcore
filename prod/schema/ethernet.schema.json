{
  "$schema": "http://json-schema.org/schema#",
  "title": "ethernet",
  "description": "Interface list",
  "type": "object",
  "patternProperties": {
    "^vlan": {
      "type": "object",
      "title": "Interface entity",
      "required": ["vid", "ip", "proto", "switch", "master_port"],
      "properties": {
        "vid": {
          "type": "number",
          "description": "VLAN ID",
          "default": 13
        },
        "switch": {
          "type": "string",
          "description": "Switch device",
          "default": "switch0"
        },
        "master_port": {
          "type": "string",
          "description": "Master port",
          "default": "eth0"
        },
        "tagged_ports":{
          "type": "array",
          "description": "Tagged ports",
          "items": {
            "type": "string",
            "description": "Tagged port"
          }
        },
        "untagged_ports":{
          "type": "array",
          "description": "Untagged ports",
          "items": {
            "type": "string",
            "description": "Untagged port"
          }
        },
        "ip": {
          "type": "string",
          "description": "IP address config",
          "default": "dhcp"
        },
        "defaultroute": {
          "type": "boolean",
          "description": "Use as defaultroute",
          "default": false
        },
        "macaddr": {
          "type": "string",
          "description": "MAC address",
          "default": "de:ad:be:ef:12:34"
        },
        "mtu": {
          "type": "number",
          "description": "MTU",
          "maximum": 65507,
          "minimum": 500
        },
        "metric": {
          "type": "number",
          "description": "Network metric"
        },
        "proto": {
          "type": "string",
          "default": "vlan"
        },
        "zone": {
          "type": "string",
          "cue": ["firewall.zones"]
        },
        "section": {
          "type": "string",
          "description": "Internal generated UBUS name",
          "hidden": true
        }
    }
   }
 },
   "commands": {
     "apply": {
       "command": "/root/apply-ethernet.sh",
       "args": ["apply-ethernet.sh", "choto"],
       "argpass": true,
       "json": "in",
       "reload": true
    },
    "add": {
       "command": "/root/add-ethernet.sh",
       "args": ["add-ethernet.sh"],
       "argpass": true,
       "cue": ["vid"],
       "reload": true,
       "wait": true
    },
    "remove": {
       "command": "/home/art/Coding/zcore/src/remove.sh",
       "args": ["remove", "network", "interface"],
       "argpass": true,
       "wait": true,
       "reload": true
    },
    "env": {
      "command": "/usr/bin/env",
      "args": ["env"],
      "argpass": true,
      "wait": true
    }
  },
  "acquire": {
    "shell": "/root/ethernet.sh",
    "args": ["ethernet.sh", "ethernet.schema"]
  }
}
