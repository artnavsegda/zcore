{
  "$schema": "http://json-schema.org/schema#",
  "title": "mobile",
  "description": "Interface list",
  "type": "object",
  "patternProperties": {
    "^sim": {
      "type": "object",
      "title": "Interface entity",
      
      "required": ["enable", "proto"],
      "properties": {

        "proto": {
          "type": "string",
          "default": "3g",
          "hidden": true
        },

        "auto": {
          "type": "boolean",
          "default": true,
          "hidden": true
        },

        "enable": {
          "type": "boolean",
          "description": "Enable cellulare interface",
          "example": true
        },


        "defaultroute": {
          "type": "boolean",
          "description": "Use as defaultroute",
          "default": true
        },

        "mtu": {
          "type": "number",
          "description": "Interface MTU value",
          "default": 1400,
          "maximum": 1500,
          "minimum": 400
        },

        "peerdns": {
          "type": "boolean",
          "description": "Use DNS servers from this interface",
          "default": true
        },

        "metric": {
          "type": "number",
          "description": "Interface metric(priority) value",
          "minimum": 101,
          "maximum": 900,
          "default": 200
        },

        "apn": {
          "type": "string",
          "description": "Access point name"
        },

        "username": {
          "type": "string",
          "description": "Username",
          "maxLength": 39
        },

        "password": {
          "type": "string",
          "description": "Password"
        },

        "auth" : {
          "type": "string",
          "description": "Auth method",
          "enum": ["any", "eap", "pap", "chap"],
          "default": "any"
        },

        "mode": {
          "type": "string",
          "enum": ["auto","edge","umts","lte"],
          "description": "Network access mode",
          "example": "auto"
        },

        "allow_roaming": {
          "type": "boolean",
          "description": "Allow roaming registration",
          "default": false
        },

        "force_mccmnc": {
          "type": "string",
          "description": "PLMN operator code (MCC+MNC)",
          "maxLength": 6
        },

        "pincode": {
          "type": "string",
          "description": "SIM card PIN",
          "maxLength": 8
        },

        "pppd_options": {
          "type": "string",
          "description": "Additional PPPd options"
        }

      }
    }
  },
  "commands": {
  },

  "acquire": {
     "shell": "/opt/zenith/script/get.sh",
     "args": ["get.sh", "mobile", "mobile.schema"]
   }
}