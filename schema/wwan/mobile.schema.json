{
  "$schema": "http://json-schema.org/schema#",
  "title": "mobile",
  "description": "Interface list",
  "type": "object",
  "patternProperties": {
    "^sim": {
      "type": "object",
      "title": "Interface entity",

      "required": ["enable", "proto", "device_number"],
      "properties": {

        "proto": {
          "type": "string",
          "default": "3g",
          "hidden": true
        },

        "device_number": {
          "type": "number",
          "readOnly": true,
        },

        "auto": {
          "type": "boolean",
          "default": true,
          "hidden": true
        },

        "enable": {
          "type": "boolean",
          "description": "Enable cellulare interface",
          "example": true
        },


        "defaultroute": {
          "type": "boolean",
          "description": "Use as defaultroute",
          "default": true
        },

        "mtu": {
          "type": "number",
          "description": "Interface MTU value",
          "default": 1400,
          "maximum": 1500,
          "minimum": 400
        },

        "peerdns": {
          "type": "boolean",
          "description": "Use DNS servers from this interface",
          "default": true
        },

        "metric": {
          "type": "number",
          "description": "Interface metric(priority) value",
          "minimum": 101,
          "maximum": 900,
          "default": 200
        },

        "apn": {
          "type": "string",
          "description": "Access point name"
        },

        "username": {
          "type": "string",
          "description": "Username",
          "maxLength": 39
        },

        "password": {
          "type": "string",
          "description": "Password"
        },

        "auth" : {
          "type": "string",
          "description": "Auth method",
          "enum": ["any", "eap", "pap", "chap"],
          "default": "any"
        },

        "mode": {
          "type": "string",
          "enum": ["auto","edge","umts","lte"],
          "description": "Network access mode",
          "example": "auto"
        },

        "allow_roaming": {
          "type": "boolean",
          "description": "Allow roaming registration",
          "default": false
        },

        "force_mccmnc": {
          "type": "string",
          "description": "PLMN operator code (MCC+MNC)",
          "maxLength": 6
        },

        "pincode": {
          "type": "string",
          "description": "SIM card PIN",
          "maxLength": 8
        },

        "pppd_options": {
          "type": "string",
          "description": "Additional PPPd options"
        },

        "failover": {
          "type": "object",
          "title": "Failover ICMP parameters",
          "properties": {
            "address": {
              "type": "string",
            },
            "interval": {
              "type": "number"
            },
            "size": {
              "type": "number",
              "maximum": 1200,
              "minimum": 32
            },
            "count": {
              "type": "number",
              "minimum": 1,
            },
          }
        }

      }
    }
  },
  "commands": {
    "commit": {
      "command": "handler.sh",
      "args": ["commit", "wwan.mobile.schema", "mobile"],
      "wait": true,
    },

    "delete": {
      "command": "handler.sh",
      "args": ["delete", "wwan.mobile.schema", "mobile"],
      "argpass": true,
      "reload": true,
      "wait": true,
    },

    "revert": {
      "command": "handler.sh",
      "args": ["revert", "wwan.mobile.schema", "mobile"],
      "argpass": true,
      "reload": true,
      "wait": true,
    },

    "apply": {
      "command": "handler.sh",
      "args": ["apply", "wwan.mobile.schema", "mobile"],
      "argpass": true,
    },
  },

  "onset": {
    "command": "handler.sh",
    "args": ["onset", "wwan.mobile.schema", "mobile"],
    "argpass": true,
    "wait": true,
  },

  "acquire": {
     "shell": "handler.sh",
     "args": ["get", "wwan.mobile.schema", "mobile"]
   }
}
