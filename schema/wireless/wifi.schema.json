{
  "$schema": "http://json-schema.org/schema#",
  "title": "wifi",
  "description": "WiFi Interfaces list",
  "type": "object",
  "patternProperties": {
    "^cfg": {
      "type": "object",
      "title": "Radio Interface entity",
      "properties": {

        "device": {
          "type": "script",
          "description": "Radio PHY device",
          "cue": ["wireless.phy"]
        },

        "mode": {
          "type": "string",
          "description": "Interface mode",
          "enum": ["ap", "sta"]
        },

        "encryption": {
          "type": "string",
          "description": "Encryption type",
          "enum": ["open", "psk-mixed+ccmp", "wpa-mixed+ccmp"]
        },

        "ssid": {
          "type": "string",
          "description": "SSID name",
        },

        "key": {
          "type": "string",
          "description": "WPA/WPA2 key"
        },

        "hidden": {
          "type": "boolean",
          "description": "Hidden network"
        },

        "network": {
          "type": "string",
          "description": "Bridge with",
          "cue": ["lan"]
        },

      }
    }
  },
  "commands": {
  },

  "acquire": {
     "shell": "get.sh",
     "args": ["wireless.wifi.schema", "wifi-iface"]
   }
}
