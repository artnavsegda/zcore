{
  "$schema": "http://json-schema.org/schema#",
  "title": "ports",
  "description": "switch ports list",
  "type": "object",
  "namesake": "name",
  "patternProperties": {
    "^port": {
      "type": "object",
      "title": "HW port entity",
      "properties": {
        "name": {
          "type": "string",
          "hidden": true
        },

        "port": {
          "type": "number",
          "description": "PHY switch port",
          "readonly": true
        },
        "speed": {
          "type": "string",
          "description": "Port speed",
          "enum": ["auto", "10", "100", "1000"]
        },
        "duplex": {
          "type": "string",
          "description": "Duplex",
          "enum": ["half", "full"]
        },
        "disabled": {
          "type": "boolean",
          "description": "Disabled port",
          "default": true
        },
      }
    }
  },
  "commands": {
  },

  "acquire": {
     "shell": "get.sh",
     "args": ["switch.ports.schema", "switch-ports"]
   }
}
