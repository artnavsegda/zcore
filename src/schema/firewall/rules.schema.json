{
  "$schema": "http://json-schema.org/schema#",
  "title": "rules",
  "description": "Firewall rules list",
  "type": "array",
  "items": {
    "type": "object",
    "title": "Interface entity",
    "required": ["name"],
    "properties": {
      "name": {
        "type": "string",
        "description": "Interface name",
        "hidden": true
      },
      "vid": {
        "type": "number",
        "description": "VLAN ID",
      },
      "ip": {
        "type": "string",
        "description": "IP address config",
      },
      "defaultroute": {
        "type": "boolean",
        "description": "Use as defaultroute",
      },
      "macaddr": {
        "type": "string",
        "description": "MAC address",
      },
      "mtu": {
        "type": "number",
        "description": "MTU"
      },
      "metric": {
        "type": "number",
        "description": "Network metric"
      }
   }
 },
   "commands": {
     "apply": {
       "type": "string",
       "command": "/home/art/Coding/zcore/src/zfilter2",
       "json": true
    },
    "add": {
       "command": "/home/art/Coding/zcore/src/zgen",
       "add": true
    }
  },
  "acquire": {
    "shell": "./zfilter ethernet.schema.items.properties[] ./ethernet.sh"
  }
}
