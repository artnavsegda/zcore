{
  "$schema": "http://json-schema.org/schema#",
  "title": "utils",
  "type": "object",
  "namesake": "name",
  "properties": {
    "demo": {
      "type": "string",
      "description": "test option"
    },
    "subdemo": {
      "type": "object",
      "description": "test suboption",
      "properties": {
        "subthing" : {
          "type": "string",
          "description": "test sub thing"
        }
      }
    }
  },
  "commands": {
    "ping": {
      "command": "/usr/bin/ping",
      "args": ["ping", "-c 10"],
      "argpass": true,
      "wait": true
    },
    "env": {
      "command": "/usr/bin/env",
      "args": ["env"],
      "argpass": true,
      "wait": true
    }
  }
}
