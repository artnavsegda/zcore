{
  "$schema": "http://json-schema.org/schema#",
  "title": "vrrp",
  "type": "object",
  "properties": {
    "enable": {
      "type": "boolean",
      "description": "Enable VRRP service"
    },
    "interface": {
      "type": "string",
      "description": "Interface name to run on"
    },
    "virtual_ip": {
      "type": "array",
      "description": "Virtual IP addresses",
      "items": {
        "type": "string"
      }
    },
    "priority": {
      "type": "number",
      "description": "Priority of this host"
    },
    "delay": {
      "type": "number",
      "description": "Set the advertisement interval (in seconds)"
    },
    "no_virtual_mac": {
      "type": "boolean",
      "description": "Don't handle the virtual MAC address"
    }
  }
}
