{
  "$schema": "http://json-schema.org/schema#",
  "title": "mobile",
  "description": "Interface list",
  "type": "array",
  "items": {
    "type": "object",
    "title": "Interface entity",
    "required": ["name", "mode", "enable"],
    "properties": {
      "name": {
        "type": "string",
        "description": "Interface name",
        "hidden": true
      },
      "enable": {
        "type": "boolean",
        "description": "Enable cellular interface",
        "example": true
      },
      "apn": {
        "type": "string",
        "description": "Access point name"
      },
      "username": {
        "type": "string",
        "description": "Username"
      },
      "password": {
        "type": "string",
        "description": "Password",
        "hidden": true
      },
      "mode": {
        "type": "string",
        "enum": ["auto","edge","umts","lte"],
        "description": "Network access mode",
        "example": "auto"
      },
      "bands": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "enum": ["850","900","1800","1900","2100","2600"],
          "description": "Freq bands allowed"
        }
      }
    }
  },
    "commands": {
      "apply": {
        "command": "/home/art/Coding/zcore/src/zfilter2",
        "args": ["zfilter2", "-smobile.schema", "-e./apply.sh", "-cnetwork", "-tinterface", "-napply"],
        "json": "in"
     },
      "add": {
         "command": "/home/art/Coding/zcore/src/zgen",
         "args": ["zgen", "mobile.schema"],
         "argpass": true,
         "json": "out"
      },
      "commit": {
        "type": "string",
        "command": "./mobile.sh commit %n"
      },
      "revert": {
        "type": "string",
        "command": "./mobile.sh revert %@name@%",
        "json": false
      }
	 },
   "acquire": {
     "shell": "/home/art/Coding/zcore/src/zfilter",
     "args": ["zfilter", "mobile.schema","./mobile-online.sh"]
   }
}
