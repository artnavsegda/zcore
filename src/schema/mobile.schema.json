{
  "$schema": "http://json-schema.org/schema#",
  "title": "mobile",
  "description": "Interface list",
  "type": "array",
  "items": {
    "type": "object",
    "title": "Interface entity",
    "required": ["name"],
    "properties": {
      "name": {
        "type": "string",
        "description": "Interface name",
        "hidden": true
      },
      "enable": {
        "type": "boolean",
        "description": "Enable cellular interface"
      },
      "apn": {
        "type": "string",
        "description": "Access point name"
      },
      "username": {
        "type": "string",
        "description": "Username"
      },
      "password": {
        "type": "string",
        "description": "Password",
        "hidden": true
      },
      "mode": {
        "type": "string",
        "enum": ["auto","edge","umts","lte"],
        "description": "Network access mode"
      },
      "bands": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "enum": ["850","900","1800","1900","2100","2600"],
          "description": "Freq bands allowed"
        }
      }
    }
  },
    "commands": {
      "apply": {
        "type": "string",
        "command": "./apply.sh applymobile %s",
        "json": true
      },
      "commit": {
        "type": "string",
        "command": "./mobile.sh commit %n"
      },
      "revert": {
        "type": "string",
        "command": "./mobile.sh revert %@name@%",
        "json": false
      }
	 },
   "acquire": {
     "shell": "./zfilter mobile.schema.items.properties[] ./mobile-online.sh"
   }
}
