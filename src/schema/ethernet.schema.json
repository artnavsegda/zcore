{
  "$schema": "http://json-schema.org/schema#",
  "title": "ethernet",
  "description": "Interface list",
  "type": "array",
  "items": {
    "type": "object",
    "title": "Interface entity",
    "required": ["name", "vid", "ip", "macaddr", "defaultroute"],
    "properties": {
      "name": {
        "type": "string",
        "description": "Interface name",
        "hidden": true
      },
      "vid": {
        "type": "number",
        "description": "VLAN ID",
        "example": 13
      },
      "ip": {
        "type": "string",
        "description": "IP address config",
        "example": "dhcp"
      },
      "defaultroute": {
        "type": "boolean",
        "description": "Use as defaultroute",
        "example": false
      },
      "macaddr": {
        "type": "string",
        "description": "MAC address",
        "example": "de:ad:be:ef:12:34"
      },
      "mtu": {
        "type": "number",
        "description": "MTU"
      },
      "metric": {
        "type": "number",
        "description": "Network metric"
      }
   }
 },
   "commands": {
     "apply": {
       "type": "string",
       "command": "./zfilter2 ethernet.schema.items.properties[] ./apply.sh",
       "json": true
    },
    "add": {
       "command": "./zgen ethernet.schema.items eth0",
       "json": true,
       "add": true
    }
  },
  "acquire": {
    "shell": "./zfilter ethernet.schema.items.properties[] ./ethernet.sh"
  }
}
